<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="56dp"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/profile_field_name"
                    android:maxWidth="160dp"
                    android:maxLines="1"
                    android:textColor="@color/colorWhiteMiddle" />

                <TextView
                    android:id="@+id/profileUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:maxWidth="160dp"
                    android:maxLines="1"
                    android:text="@string/profile_field_email"
                    android:textColor="@color/colorWhiteMiddle" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profileDeleteButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/ic_baseline_delete_forever_24"
                    android:padding="16dp"
                    android:textColor="@color/colorWhiteLite"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/profileEditButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/ic_baseline_edit_24"
                    android:padding="16dp"
                    android:textColor="@color/colorWhiteLite"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/profileLogOutButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
                    android:padding="16dp"
                    android:textColor="@color/colorWhiteLite"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/level"
                    android:textColor="@color/colorWhiteMiddle"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/levelSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryLite"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp">

                </Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/dangers_head"
                    android:textColor="@color/colorWhiteMiddle"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/checkBoxKnee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/knee"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBoxNeck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loins"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBoxLoins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/neck"
                        android:layout_marginTop="16dp"
                        android:layoutDirection="rtl"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/createButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_background"
                        android:enabled="true"
                        android:paddingStart="32dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="32dp"
                        android:paddingBottom="16dp"
                        android:text="@string/create"
                        android:textColor="@color/colorWhiteLite" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>