<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_profile">

    <fragment
        android:id="@+id/nav_select"
        android:name="ru.yogago.goyoga.ui.select.SelectFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_select" >
        <action
            android:id="@+id/action_nav_select_to_nav_action"
            app:destination="@id/nav_action" />
    </fragment>

    <fragment
        android:id="@+id/nav_action"
        android:name="ru.yogago.goyoga.ui.action.ActionFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_action" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="ru.yogago.goyoga.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_nav_profile_to_nav_editUser"
            app:destination="@id/nav_editUser" />
        <action
            android:id="@+id/action_nav_profile_to_billingFragment"
            app:destination="@id/nav_billing" />
    </fragment>

    <fragment
        android:id="@+id/nav_editUser"
        android:name="ru.yogago.goyoga.ui.profile.EditUserFragment"
        android:label="edit_user_fragment"
        tools:layout="@layout/edit_user_fragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="ru.yogago.goyoga.MainActivity"
        android:label="activity_error"
        tools:layout="@layout/activity_error" />
    <activity
        android:id="@+id/loginActivity"
        android:name="ru.yogago.goyoga.ui.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/registerActivity"
        android:name="ru.yogago.goyoga.ui.login.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
    <fragment
        android:id="@+id/nav_billing"
        android:name="ru.yogago.goyoga.ui.profile.BillingFragment"
        android:label="billing_fragment"
        tools:layout="@layout/billing_fragment" />

</navigation>